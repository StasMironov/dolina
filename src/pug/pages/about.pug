								.swiper-slide
									img(src="./img/slider/slide2.jpg" alt="")
								.swiper-slide
									img(src="./img/slider/slide1.jpg" alt="")
						<div class="swiper-pagination"></div>
				.about__include
	.about-advantage
		.bcg-parallax.js-bcg-parallax
			.bcg.js-bcg
			.content-wrapper.js-content-wrapper
